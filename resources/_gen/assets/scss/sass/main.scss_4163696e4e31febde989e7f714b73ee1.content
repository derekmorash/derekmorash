.blog-post{width:100%;max-width:1200px;margin:0 auto;padding:0 1rem}@media(min-width:600px){.blog-post{padding:0 1.5rem}}@media(min-width:900px){.blog-post{padding:0 2rem}}.blog-post__content>*{display:block;max-width:600px;margin-left:auto}.blog-post__content>figure{display:block;width:100%;max-width:none;margin:2rem 0}.blog-post__content>figure img{margin:0 auto}.blog-post__content>figure figcaption{margin-top:.5rem;font-size:.75rem;font-style:italic;color:#737373}.blog-post__content>img{text-align:left}